<!DOCTYPE html>
<html>
<head>
  <title>Switter</title>
<script src="http://code.jquery.com/jquery-1.9.1.js"></script>
  <%= stylesheet_link_tag  :materialize %>
   <%= stylesheet_link_tag  :palette %>
   <%= stylesheet_link_tag  :application %>
  <%= javascript_include_tag :materialize %>

  <%= javascript_include_tag :application %>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <%= csrf_meta_tags %>
</head>
<body>

  <div id="container">
    <div id="user_header">
      <% if current_user %>
        Logged in as <%= current_user.username %>
        <%= link_to("Log out", :controller => "sessions", :action => 'destroy') %>
      <% else %>
        <%= link_to "Sign up", new_user_path %> or
        <%= link_to "Log in", new_session_path %>
      <% end %>
    </div>

    <% flash.each do |username, msg| %>
      <%= content_tag :div, msg, id: "flash_#{username}" %>

    <% end %>

    <%= yield %>
  </div>
</body>
</html>
