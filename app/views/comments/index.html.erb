<h1>Listing comments</h1>

<table>
  <thead>
    <tr>
      <th>Swit</th>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.swit_id %></td>
        <td><%= comment.body %></td>
        <td><%= comment.user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_comment_path %>
